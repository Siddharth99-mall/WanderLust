<% layout("/layouts/boilerplate")-%>
<body>
    <h3>All Listings</h3>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let list of allListings ) {%>
       <a href="/listing/<%=list._id %>/show" class="listing-link">
    <div class="card col">
      <div class="card-img-overlay">
        <p class="card-text"></p>
      </div>
       <img src="<%= list.image%>" class="card-img-top" alt="listing-image">
        <div class="card-body">
          <p class="card-text"><b><%=list.title %></b>
            <br>
          &#8377 <%=list.price.toLocaleString("en-IN")%> 
          </p>
        </div>
    </div>
</a>
    
    <% }%>
</div>
</body>
